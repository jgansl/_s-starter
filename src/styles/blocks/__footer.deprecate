footer .social-icon {
  @include rel;
  width: 3rem;
  height: 3rem;
  display: inline-block;
  &:not(:first-child) {
    margin-left: 1.3125rem;
  }
  transition: all 0.2s ease-out;
  fill: $color-primary;
  border-radius: 100%;
  opacity: 1;
  stroke: #fff;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  svg {
    height: 100%;
    width: 100%;
  }
  &:hover {
    transform: scale(1.15);
  }
}
