  background-color: $blue !important;
  > svg {
    display: none;
  }
  svg {
    position: absolute;
    top: 0;
    left: 0;
    @media (max-width: 1700px) {
      height: 101%;
      width: auto;
    }
    @media (min-width: 1700px) {
      width: 108%;
      height: auto;
    }
  }
}

